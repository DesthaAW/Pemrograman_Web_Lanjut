{
    "name": "codeigniter4/project",
    "description": "CodeIgniter 4 Project",
    "type": "project",
    "require": {
        "php": "^7.2|^8.0",
        "codeigniter4/framework": "^4.0",
        "symfony/var-dumper": "^5.0",
        "monolog/monolog": "^2.0",
        "psr/log": "^1.1",
        "guzzlehttp/guzzle": "^7.0",
        "filp/whoops": "^2.14",
        "doctrine/dbal": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "post-install-cmd": [
            "php spark post-install"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
